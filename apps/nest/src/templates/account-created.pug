extends layout.pug

block content
  // Main
  tr
    td.px-32.mpx-16.pt-30.pb-47(style='padding-left: 32px; padding-right: 32px; padding-top: 30px; padding-bottom: 47px;')
      table(width='100%' border='0' cellspacing='0' cellpadding='0')
        tr
          td.fw-700.pb-33(style='font-size:32px; line-height:36px; font-family:Arial, sans-serif; text-align:left; min-width:auto !important; font-weight: 700; padding-bottom: 33px;')
            | New account pending verification!
        tr
          td.pb-8(style='font-size:16px; line-height:20px; font-family:Arial, sans-serif; text-align:left; min-width:auto !important; padding-bottom: 8px;')
            | Hello #{email}
            a.link(href='mailto:' target='_blank' style='text-decoration:none; pointer-events:none; cursor:auto;')
              span.link(style='text-decoration:none; pointer-events:none; cursor:auto;')
            | ,
        tr
          td.pb-15(style='font-size:16px; line-height:20px; font-family:Arial, sans-serif; text-align:left; min-width:auto !important; padding-bottom: 15px;')
            | Use this code to verify your new account: #{code}.
  // END Main
